<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             x:Class="GestaoDeEscalas.Escalas"
             BackgroundColor="#121212">

    <!-- Grid principal -->
    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="2*,*"
          Padding="10">

        <!-- TOPO ocupa as duas colunas -->
        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              BackgroundColor="#121212"
              Padding="10"
              ColumnDefinitions="Auto,*,Auto">

            <Button Text="←"
                    BackgroundColor="Transparent"
                    BorderColor="#727272"
                    BorderWidth="1"
                    TextColor="White"
                    HeightRequest="48"
                    CornerRadius="24"
                    FontAttributes="Bold"
                    FontSize="16"
                    Clicked="OnVoltarClicked"/>

            <Label Grid.Column="1"
                   Text="Minha Escala"
                   FontFamily="Bold"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <Button Grid.Column="2"
                    Text="Nova escala"
                    BackgroundColor="#3A8DFF"
                    BorderColor="#727272"
                    BorderWidth="1"
                    TextColor="White"
                    HeightRequest="48"
                    CornerRadius="24"
                    FontAttributes="Bold"
                    FontSize="16"/>
        </Grid>

        <!-- Calendário -->
        <Border Grid.Row="1"
                Grid.Column="0"
                BackgroundColor="DarkGrey"
                StrokeShape="RoundRectangle 20"
                Margin="10,10,20,10"
                Padding="0">

            <scheduler:SfScheduler
                x:Name="Agenda"
                View="Week"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"/>
        </Border>

        <!-- Área direita  -->
        <Grid Grid.Row="1"
              Grid.Column="1"
              Margin="5"
              BackgroundColor="#1E1E1E">

        </Grid>

    </Grid>
</ContentPage>