<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeEscalas.Perfil"
             BackgroundColor="black">

    <Grid Padding="24">

        <ScrollView>
            <Grid>
                <Border BackgroundColor="#121212"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        MaximumWidthRequest="900"
                        Padding="60"
                        StrokeThickness="0">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="32"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="28">

                        <!-- Titulo -->
                        <Label Text="Meu Perfil"
                               FontSize="38"
                               FontAttributes="Bold"
                               FontFamily="Bold"
                               HorizontalOptions="Center"
                               TextColor="White"
                               Margin="0,0,0,10"/>


                        <!-- Foto -->
                        <Image x:Name="fotoAlterar"
                               Source="mulher.png"
                               HeightRequest="120"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"/>

                        <!-- Nome -->
                        <Label Text="NomeUsuario"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <!-- Email -->
                        <Label x:Name="Email"
                               Text="EmailUsuario@Outlook.com.br"
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Center"/>


                      

                       

                        <!-- Bot�o Sair -->
                        <Button Text="Sair"
                                BackgroundColor="#FF3B30"
                                TextColor="White"
                                HeightRequest="55"
                                CornerRadius="28"
                                FontAttributes="Bold"
                                FontSize="17"
                                Margin="0,30,0,0"
                                Clicked="OnVoltarTelaLogin"/>

                        <!-- Bot�o Voltar -->
                        <Button Text="Voltar"
                                BackgroundColor="Transparent"
                                BorderColor="#727272"
                                BorderWidth="1.5"
                                TextColor="White"
                                HeightRequest="55"
                                CornerRadius="28"
                                FontAttributes="Bold"
                                FontSize="17"
                                Clicked="OnVoltarTelaInicialCliked"/>

                    </VerticalStackLayout>

                </Border>
            </Grid>
        </ScrollView>

    </Grid>
</ContentPage>